<div class="wrapper">
	<div class="main-panel">
		<nav class="navbar navbar-transparent navbar-absolute">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#">Air Host Dashboard</a>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								<i class="material-icons">notifications</i>
								<span class="notification">4</span>
								<p class="hidden-lg hidden-md">Notifications</p>
							</a>
							<ul class="dropdown-menu">
								<li><a href="#">Api call from Tenant1 at 10:20 PM</a></li>
								<li><a href="#">Api call from Tenant1 at 10:30 PM</a></li>
								<li><a href="#">Api call from Tenant1 at 10:40 PM</a></li>
								<li><a href="#">Api call from Tenant1 limit reached</a></li>
							</ul>
						</li>
						<li>
							<a href="#pablo" class="dropdown-toggle" data-toggle="dropdown">
								<i class="material-icons">person</i>
								<p class="hidden-lg hidden-md">Profile</p>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		<div class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-3 col-md-6 col-sm-6">
						<div class="card card-stats">
							<div class="card-header" data-background-color="orange">
								<i class="material-icons">account_circle</i>
							</div>
							<div class="card-content">
								<p class="category">Number of Users</p>
								<h3 class="title"><%= @users.count %></h3>
							</div>
							<div class="card-footer">
								<div class="stats">
									<i class="material-icons">info</i><a href="#pablo"> View Users...</a>
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-3 col-md-6 col-sm-6">
						<div class="card card-stats">
							<div class="card-header" data-background-color="green">
								<i class="material-icons">help</i>
							</div>
							<div class="card-content">
								<p class="category">Number of questions</p>
								<h3 class="title"><%= @questions.count %></h3>
							</div>
							<div class="card-footer">
								<div class="stats">
									<i class="material-icons">date_range</i> Last Questions
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-3 col-md-6 col-sm-6">
						<div class="card card-stats">
							<div class="card-header" data-background-color="red">
								<i class="material-icons">done</i>
							</div>
							<div class="card-content">
								<p class="category">Answers</p>
								<h3 class="title"><%= @answers.count %></h3>
							</div>
							<div class="card-footer">
								<div class="stats">
									<i class="material-icons">local_offer</i> View Answers
								</div>
							</div>
						</div>
					</div>

					<div class="col-lg-3 col-md-6 col-sm-6">
						<div class="card card-stats">
							<div class="card-header" data-background-color="blue">
								<i class="material-icons">timeline</i>
							</div>
							<div class="card-content">
								<p class="category">Total Requests</p>
								<h3 class="title">+<%= @total_tenant_count %></h3>
							</div>
							<div class="card-footer">
								<div class="stats">
									<i class="material-icons">update</i> Just Updated
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-lg-6 col-md-12">
						<div class="card">
							<div class="card-header" data-background-color="orange">
									<h4 class="title">Tenants</h4>
									<p class="category">requests number per tenants</p>
							</div>
							<div class="card-content table-responsive">
								<table class="table table-hover">
									<thead class="text-warning">
										<th>ID</th>
										<th>Name</th>
										<th>Api Key</th>
										<th>Request Couunts</th>
									</thead>
									<tbody>
										<% @tenants.each do |tenant| %>
											<tr>
												<td><%= tenant.id %></td>
												<td><%= tenant.name %></td>
												<td><%= tenant.api_key %></td>
												<td><%= tenant.request_count %></td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>